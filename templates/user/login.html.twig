{% extends 'base.html.twig' %}

{% block body %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form class="form-login" action="{{ path('security.login') }}" method="post">

    <fieldset>
      <legend>{% trans %}user.login.form_legend{% endtrans %}</legend>
      <input type="text" name="username" value="{{ last_username }}"
             id="username" autocomplete="off"
      />
      <label for="username">
        {% trans %}user.login.form_username{% endtrans %}
      </label>

      <input type="password" id="password" name="password"
             autocomplete="new-password" autocorrect="off" autocapitalize="off"
      />
      <label for="password">
        {% trans %}user.login.form_password{% endtrans %}
      </label>

      {# <div class="flow">
        <input type="checkbox" id="remember_me" name="_remember_me" value="false" />
        <label for="remember_me">Se souvenir de moi</label>
      </div> #}

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
      <input type="hidden" name="_target_path" value="{{ path('homepage') }}" />
    </fieldset>

    <button type="submit" class="al6">
      {% trans %}user.login.form_submit{% endtrans %}
    </button>
  </form>
{% endblock %}
